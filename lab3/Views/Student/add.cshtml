				<td> Password</td>
			<td>	<input asp-for=Password type="password" /></td>
				<td><span asp-validation-for=Password></span></td>
			</tr>
			<tr>
				<td> ConfirmPassword</td>
			<td>	<input asp-for=CPassword  type="password"/></td>
				<td><span asp-validation-for=CPassword></span></td>
			</tr>	
			<tr >
             <td />
			 <td> <input type="submit" class ="btn btn-primary" value ="ADD" /> </td>
			<td></td>

			</tr>
			</table>
		
			</form>
				</div>
		   </div>
		   </div>
