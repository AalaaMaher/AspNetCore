@model department ;
<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title> add</title>
		<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
	</head>
	<body>
		<div class="d-flex justify-content-center m-1">
			<div class="card " style="background-color:#CFE2FF;" >
			<div class="form-froup row m-1 ">
				<div class="card-body">
		<h3 class="card-title"> 
			Edit Department
		</h3>
		<hr />
			
		<form asp-action="edit" asp-controller="Department" class="m-2" >
		<div class="row m-1" hidden>
			<lable class="col-sm-4 col-form-label" hidden>ID</lable>
			<div class="col-sm-8">
              <input  class="form-control" asp-for="ID" hidden /> 
		       </div>
			   </div>
			   <div class="row m-1">
			<lable class="col-sm-4 col-form-label ">Name</lable>
			<div class="col-sm-8">
              <input  class="form-control" asp-for="Name" name="Name" value=@((ViewData["dept"] as department )?.Name) /> 
		       </div>
			   </div>
			<div class="row m-1">
			<lable class="col-sm-4 col-form-label ">Capacity</lable>
			<div class="col-sm-8">
              <input  class="form-control" asp-for="Capacity" name="Capacity" value=@((ViewData["dept"] as department )?.Capacity)/> 
		       </div>
			   </div>
		        <a asp-action="index" asp-controller="Department"  class ="btn btn-secondary float-start" >return to list</a>
			<input type="submit" value="Edit" class="btn btn-success m-2 float-end"/>

		</form>
		</div>
		</div>
		</div>
		</div>
		</body>
		</html>